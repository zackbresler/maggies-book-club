// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  passwordHash String
  isAdmin      Boolean  @default(false)
  createdAt    DateTime @default(now())

  // Relations
  books        Book[]
  ratings      Rating[]
  vote         Vote?
  createdCodes InviteCode[] @relation("CreatedCodes")
  usedCode     InviteCode?  @relation("UsedCode")
}

model Book {
  id             String     @id @default(cuid())
  title          String
  author         String
  isbn           String?
  isbn13         String?
  coverUrl       String?
  synopsis       String?
  openLibraryKey String?
  pageCount      Int?
  publishYear    Int?
  status         String     @default("SUGGESTION")
  addedById      String
  addedAt        DateTime   @default(now())

  // Relations
  addedBy   User                 @relation(fields: [addedById], references: [id])
  ratings   Rating[]
  questions DiscussionQuestion[]
  votes     Vote[]
}

// Vote for next book - each user can only have one active vote
model Vote {
  id        String   @id @default(cuid())
  userId    String   @unique  // Each user can only vote for one book
  bookId    String
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)
}

model Rating {
  id        String   @id @default(cuid())
  userId    String
  bookId    String
  rating    Float
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId])
}

model InviteCode {
  id          String    @id @default(cuid())
  code        String    @unique
  createdById String
  usedById    String?   @unique
  createdAt   DateTime  @default(now())
  usedAt      DateTime?

  // Relations
  createdBy User  @relation("CreatedCodes", fields: [createdById], references: [id])
  usedBy    User? @relation("UsedCode", fields: [usedById], references: [id])
}

model DiscussionQuestion {
  id        String   @id @default(cuid())
  bookId    String
  question  String
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())

  // Relations
  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)
}

model Announcement {
  id        String   @id @default(cuid())
  title     String   @default("Next Book Club Meeting")
  location  String
  dateTime  DateTime
  notes     String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SiteSetting {
  key   String @id
  value String
}

